{
  "name": "@vue-polkadot/minimark",
  "version": "0.0.1-rc.1",
  "description": "Minimal implementation of the RMRK",
  "author": "Viki Val <viktorko99@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup src/* --dts --format esm,cjs",
    "start": "tsup src/* --watch",
    "test": "echo test",
    "lint": "echo lint",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikiival/minimark.git"
  },
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@polkadot/api": "6.12.1",
    "@size-limit/preset-small-lib": "^7.0.5",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tslib": "^2.3.1",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "@polkadot/api": ">=^6.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/minimark.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/minimark.esm.js",
      "limit": "10 KB"
    }
  ]
}
