{
  "name": "@kodadot1/minimark",
  "version": "0.0.1-rc.3",
  "license": "MIT",
  "author": "Viki Val",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "@polkadot/api": ">=^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/minimark.esm.js",
  "size-limit": [
    {
      "path": "dist/minimark.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/minimark.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@polkadot/api": "6.12.1",
    "@size-limit/preset-small-lib": "^7.0.5",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "slugify": "^1.6.5"
  }
}
